<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#242A32"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Guid1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Guid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93"/>

        <ImageView
            android:id="@+id/movHeadPoster"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1.777"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:background="@mipmap/ic_launcher"
            />
        <ImageView
            android:id="@+id/movDetailPoster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.229"
            app:layout_constraintDimensionRatio="0.791"
            tools:background="@mipmap/ic_launcher"
            android:layout_marginTop="151dp"
            app:layout_constraintStart_toStartOf="@+id/Guid1_1"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/movDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            tools:text="Movie detail name"
            app:layout_constraintStart_toEndOf="@id/movDetailPoster"
            app:layout_constraintTop_toBottomOf="@id/movHeadPoster"
            />
        <TextView
            android:id="@+id/movAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/Guid1_1"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/movDetailPoster"
            android:text="@string/about_movie"
            android:textColor="@color/white"
            />
        <View
            android:id="@+id/aboutLine"
            android:layout_width="90dp"
            android:layout_height="4dp"
            app:layout_constraintTop_toBottomOf="@id/movAbout"
            app:layout_constraintStart_toStartOf="@id/movAbout"
            android:background="@drawable/ic_rectangle_3"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/movOverviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/Guid1_1"
            app:layout_constraintEnd_toEndOf="@id/Guid2"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            tools:text="dssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            app:layout_constraintTop_toBottomOf="@+id/aboutLine"
            />
        <TextView
            android:id="@+id/movDetailRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/Guid1_1"
            app:layout_constraintTop_toBottomOf="@id/movOverviews"
            tools:text="232323232"/>
        <TextView
            android:id="@+id/movDetailRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/Guid1_1"
            app:layout_constraintTop_toBottomOf="@id/movDetailRelease"
            tools:text="232323232"/>
        <TextView
            android:id="@+id/movDetailRateCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            android:layout_marginStart="188dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/movDetailRelease"
            tools:text="232323232"/>
        <TextView
            android:id="@+id/movDetailPopularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/Guid1_1"
            app:layout_constraintTop_toBottomOf="@id/movDetailRating"
            tools:text="232323232"/>

        <View
            android:id="@+id/movDetailBack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_group_24"
            app:layout_constraintWidth_percent="0.253"
            app:layout_constraintStart_toStartOf="@+id/Guid1_1"
            app:layout_constraintTop_toBottomOf="@+id/movDetailPopularity"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintDimensionRatio="2.5"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>